{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "prettier/prettier": ["warn", { "singleQuote": true }],
        "quotes": [2, "single", "avoid-escape"],
        "no-debugger": "off"
    }
}
